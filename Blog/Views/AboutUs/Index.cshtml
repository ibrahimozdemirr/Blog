@model IEnumerable<EntityLayer.Entity.AboutUs>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AboutContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AboutContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AboutDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AboutId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AboutId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AboutId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
