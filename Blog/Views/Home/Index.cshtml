@using EntityLayer.Entity

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainUI.cshtml";
}
<!-- ***** Preloader Start ***** -->
<div id="preloader">
    <div class="jumper">
        <div></div>
        <div></div>
        <div></div>
    </div>
</div>
<!-- ***** Preloader End ***** -->
<!-- Banner Starts Here -->
<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            @{
                var pst5data =ViewData["Pst5"];
                if (pst5data!=null)
                {
                    foreach (var item in ViewData["Pst5"] as IEnumerable<Posts>)
                    {
                        <div class="item">
                            <img src="~/UI/images/banner-item-01.jpg" alt="">
                            <div class="item-content">
                                <div class="main-content">
                                    <div class="meta-category">
                                        <span>Lifestyle</span>
                                    </div>
                                    <a href="/Posts/Details/@item.PostId"><h4>@item.PostName</h4></a>
                                    <ul class="post-info">  
                                        <li><a href="#">@item.Users.UserFullName</a></li>
                                        <li><a href="#">@item.PostDate</a></li>
                                        <li><a href="#">36 Comments</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    }
                }
            }
            
        </div>
    </div>
</div>
<!-- Banner Ends Here -->




<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @{
                            foreach(var item in pst5data as IEnumerable<Posts>)
                            {
                                <div class="col-lg-12">
                                    <div class="blog-post">
                                        <div class="blog-thumb">
                                            <img src="~/UI/images/blog-post-01.jpg" alt="">
                                        </div>
                                        <div class="down-content">
                                            <span>Lifestyle</span>
                                            <a href="post-details.html"><h4>@item.PostName</h4></a>
                                            <ul class="post-info">
                                                <li><a href="#">@item.Users.UserFullName</a></li>
                                                <li><a href="#">@item.PostDate</a></li>
                                                <li><a href="#">12 Comments</a></li>
                                            </ul>
                                            <p>@item.PostDescription</p>
                                            <div class="post-options">
                                                <div class="row">
                                                    <div class="col-6">
                                                        
                                                    </div>
                                                    <div class="col-6">
                                                        <ul class="post-share">
                                                            <li><i class="fa fa-share-alt"></i></li>
                                                            <li><a href="#">Facebook</a>,</li>
                                                            <li><a href="#"> Twitter</a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                        }
                        
                        
                        <div class="col-lg-12">
                            <div class="main-button">
                                <a href="~/Entries/Index">@_localization.GetKey("Bütün Gönderileri Gör")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" name="gs" method="GET" action="#">
                                    <input type="text" name="q" class="searchText" placeholder=@_localization.GetKey("Arama Yapın")... autocomplete="on">
                                </form>
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <div class="sidebar-item recent-posts">
                                <div class="sidebar-heading">


                                    <h2>@_localization.GetKey("Son Gönderiler")</h2>
                                </div>
                            
                                        <div class="content">
                                    <ul>
                                        @{
                                            if (pst5data != null)
                                            {
                                                foreach (var item in ViewData["Pst5"] as IEnumerable<Posts>)
                                                {
                                                    <li>
                                                        <a href="post-details.html">
                                                            <h5>@item.PostName</h5>
                                                            <span>@item.PostDate</span>
                                                        </a>
                                                    </li>

                                                }
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item categories">
                                <div class="sidebar-heading">
                                    <h2>@_localization.GetKey("Kategoriler")</h2>
                                </div>
                                <div class="content">
                                    <ul>@{
                                            var categorylist = ViewData["Categories"];
                                            if(categorylist != null)
                                            {
                                                foreach(var item in categorylist as IEnumerable<Categories>)
                                                {
                                                    <li><a>@item.CategoryName</a></li>
                                                    
                                                }
                                                
                                            }

                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item tags">
                                <div class="sidebar-heading">
                                    <h2>@_localization.GetKey("Etiketler")</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        @{
                                            var tag5data = ViewData["Tags"];
                                            if (tag5data != null)
                                            {
                                                foreach (var item in tag5data as IEnumerable<Tags>)
                                                {
                                                    <li><a>@item.TagName</a></li>
                                                }
                                            }

                                        }
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

