@model IEnumerable<EntityLayer.Entity.Comments>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommentWritername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentIsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentWritername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentIsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.UserFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posts.PostDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CommentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CommentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CommentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
