@model EntityLayer.Entity.Users
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<p class="h5 fw-semibold mb-2">Sign In</p>

<div class="text-center my-5 authentication-barrier">
</div>
<form asp-action="Index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="row gy-3">
        <div class="col-xl-12 mt-0">
            <label for="signin-username" class="form-label text-default">User Name</label>
            <input asp-for="UserName" type="text" class="form-control form-control-lg" id="signin-username" placeholder="user name">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-xl-12 mb-3">
            <label for="signin-password" class="form-label text-default d-block">Password<a href="~/login/forgotpassword" class="float-end text-danger">Forget password ?</a></label>
            <div class="input-group">
                <input type="password" class="form-control form-control-lg" id="signin-password" placeholder="password">
                <button class="btn btn-light" type="button" onclick="createpassword('signin-password',this)" id="button-addon2"><i class="ri-eye-off-line align-middle"></i></button>
            </div>
            <div class="mt-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label text-muted fw-normal" for="defaultCheck1">
                        Remember password ?
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <p class="fs-12 text-muted mt-4">Dont have an account?<input type="submit" value="Create" class="text-primary" /></p>
        </div>

    </div>
</form>
