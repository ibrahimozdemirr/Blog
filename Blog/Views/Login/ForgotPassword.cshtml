            <button class="btn btn-light" type="button" onclick="createpassword('email',this)" id="button-addon2"><i class="ri-eye-off-line align-middle"></i></button>
        </div>
    </div>
    <div class="col-xl-12 d-grid mt-2">
        <a href="javascript:void(0);" class="btn btn-lg btn-primary">Send</a>
    </div>
