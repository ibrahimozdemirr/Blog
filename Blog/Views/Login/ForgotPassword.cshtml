
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<p class="h5 fw-semibold mb-2">Forgot</p>
<p class="mb-3 text-muted op-7 fw-normal">Please Enter Your Email</p>
<div class="row gy-3">
